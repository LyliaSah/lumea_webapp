{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container min-vh-100 d-flex justify-content-center align-items-center" style="background-color: #f3f4f6;">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 1rem;">
    <h2 class="text-center mb-4" style="color: #008080;">Connexion</h2>

    <form method="post" action="{{ path('app_lumea') }}" autocomplete="username" novalidate data-turbo="false">
      <div class="mb-3">
        <label for="email" class="form-label" style="color: #1F2937;">Adresse e-mail</label>
        <input type="text"
               id="email"
               name="_username"
               required
               autofocus
               autocomplete="email"
               placeholder="votre.email@example.com"
               class="form-control"
               value="{{ email|default('')|e }}">
      </div>

      <div class="mb-3">
        <label for="password" class="form-label" style="color: #1F2937;">Mot de passe</label>
        <input type="password"
               id="password"
               name="_password"
               required
               autocomplete="current-password"
               placeholder="••••••••"
               class="form-control">
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <button type="submit" class="btn w-100 mt-3 fw-bold text-white" style="background-color: #008080;">Se connecter</button>

      <p class="text-center mt-4 mb-0" style="color: #1F2937;">
        Pour s'inscrire
        <a href="{{ path('app_demande_enregistrement') }}" style="color: #cc7000; font-weight: 600;">cliquez ici</a>
      </p>
    </form>
  </div>
</div>
{% endblock %}
