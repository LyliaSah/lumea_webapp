{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
  body {
    background-color: #f3f4f6; /* gris clair */
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  .login-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }
  .login-box {
    background: #fff;
    padding: 2rem 2.5rem;
    border-radius: 12px;
    box-shadow: 0 6px 18px rgba(0,0,0,0.1);
    max-width: 400px;
    width: 100%;
  }
  .login-box h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-weight: 700;
    color: #111827; /* gris foncé */
  }
  label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.3rem;
    color: #374151;
    font-size: 0.9rem;
  }
  input[type="text"],
  input[type="password"] {
    width: 100%;
    padding: 0.6rem 1rem;
    border: 1.5px solid #d1d5db;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }
  input[type="text"]:focus,
  input[type="password"]:focus {
    outline: none;
    border-color: #3b82f6; /* bleu */
    box-shadow: 0 0 6px rgba(59,130,246,0.5);
  }
  button[type="submit"] {
    margin-top: 1.5rem;
    width: 100%;
    background-color: #3b82f6;
    color: white;
    border: none;
    padding: 0.75rem;
    font-size: 1.1rem;
    font-weight: 700;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.25s ease;
  }
  button[type="submit"]:hover {
    background-color: #2563eb;
  }
  @media (max-width: 480px) {
    .login-box {
      padding: 1.5rem 1.75rem;
    }
  }
</style>

<div class="login-container">
  <div class="login-box">
    <h2>Connexion</h2>

    <form method="post" action="{{ path('app_login') }}" autocomplete="username" novalidate data-turbo="false">
      <div>
        <label for="email">Adresse e-mail</label>
        <input
          type="text"
          id="email"
          name="_username"
          required
          autofocus
          autocomplete="email"
          placeholder="votre.email@example.com"
          value="{{ email|default('')|e }}"
        >
      </div>

      <div>
        <label for="password">Mot de passe</label>
        <input
          type="password"
          id="password"
          name="_password"
          required
          autocomplete="current-password"
          placeholder="••••••••"
        >
      </div>

      {# CSRF token #}
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <button type="submit">Se connecter</button>

      <p class="text-center text-sm mt-4 text-gray-600">
           Faites votre demande aupres de nos services
            <a href="{{ path('app_demande_enregistrement') }}" class="text-blue-600 hover:underline font-semibold">
               cliquez ici 
            </a>
        </p>

    </form>
  </div>
</div>
{% endblock %}